@using Presentation.Extensions
@using CrossCutting
@model ERP_CRM_Solution.ViewModels.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div id="content" class="wraper container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*Atalhos*@
            <div class="row">
                <h3 style="color:olivedrab; font-weight:bold">Dashboard - Mensageria</h3>
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Clientes", action: "MostrarClientes", controller: "Mensagem", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Clientes - Inclusão", action: "IncluirClienteRapido", controller: "Mensagem", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Grupos", action: "MostrarGrupos", controller: "Mensagem", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Modelos E-Mail", action: "MontarTelaTemplateEMail", controller: "TemplateEMail", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Modelos SMS", action: "MontarTelaTemplateSMS", controller: "TemplateSMS", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Central de E-Mails", action: "MontarTelaMensagemEMail", controller: "Mensagem", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Envio de E-Mails", action: "IncluirMensagemEMail", controller: "Mensagem", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Central de SMS", action: "MontarTelaMensagemSMS", controller: "Mensagem", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Envio de SMS", action: "IncluirMensagemSMS", controller: "Mensagem", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Automação", action: "MontaTelaAutomacao", controller: "Mensagem", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Dashboard", controller: "Mensagem", action: "Voltar")
                    </div>
                    <br /><br />
                </div>
            </div>

            @*Estatísticas*@
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12">
                    <div class="ibox-content text-center">
                        <h1>@Model.USUA_NM_NOME.Substring(0, Model.USUA_NM_NOME.IndexOf(" "))</h1>
                        <div class="m-b-sm">
                            <img alt="image" class="img-circle" src="@Url.Content(Model.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 90px; max-width: 90px;">
                        </div>
                        <p class="font-bold">@((String)Session["NomeGreeting"])</p>

                        <div class="text-center">
                            @Html.ButtonLinkIndex(text: "Perfil", action: "MontarTelaPerfilUsuario", controller: "Usuario", buttonClass: "btn btn-xs btn-white")
                            @if (Model.PERFIL.PERF_SG_SIGLA == "ADM")
                            {
                                @Html.ButtonLinkIndex(text: "Dashboard Pessoal", action: "CarregarDashPessoal", controller: "BaseAdmin", buttonClass: "btn btn-xs btn-primary")
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <span class="label label-warning pull-right">Hoje</span>
                            <h5>Clientes & Grupos</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-12">
                                    <small class="stats-label">Clientes</small>
                                    <h4>@ViewBag.Clientes</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <small class="stats-label">Grupos de Clientes</small>
                                    <h4>@ViewBag.Grupos</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <span class="label label-warning pull-right">Hoje</span>
                            <h5>Resumo de Mensagens</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Total</small>
                                    <h4>@ViewBag.TotalEnviado</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">E-Mails</small>
                                    <h4>@ViewBag.EMailsEnviado</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">SMS</small>
                                    <h4>@ViewBag.SMSEnviado</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Total(Mês)</small>
                                    <h4>@ViewBag.TotalMes</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">E-Mails(Mês)</small>
                                    <h4>@ViewBag.EMailsMes</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">SMS(Mês)</small>
                                    <h4>@ViewBag.SMSMes</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @*Indicadores*@
            <br />
            <div class="row">

                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Indicadores</h5>
                        </div>
                        <div class="ibox-content ibox-heading">
                            <h3><i class="fa fa-line-chart"></i> Indicadores</h3>
                            <small><i class="fa fa-tim"></i> Valores acumulados/atualizados até hoje</small>
                        </div>

                        <div class="ibox-content" style="height: 800px">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Estatística de Envio de E-Mails/dia</h4>
                                            <h4 style="color: brown">(Exibindo apenas o mês corrente)</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                @if ((ViewBag.ListaEMailMes as List<ERP_CRM_Solution.ViewModels.ModeloViewModel>).Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Data de Emissão</th>
                                                                <th>Total Enviado</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (ViewBag.ListaEmailMes as List<ERP_CRM_Solution.ViewModels.ModeloViewModel>))
                                                            {
                                                                <tr>
                                                                    <td>@cond.DataEmissao.ToShortDateString()</td>
                                                                    <td>@cond.Valor</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                                <div class="form-group">
                                                    @Html.ButtonLinkIndex(text: "Ver Todos os Meses", action: "VerEmailExpansaoTodos", controller: "Mensagem")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Gráfico do Envio de E-Mails/Dia (Mês Corrente)</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                <canvas id="barChart" height="150"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Estatística de Envio de SMS/dia</h4>
                                            <h4 style="color: brown">(Exibindo apenas o mês corrente)</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                @if ((ViewBag.ListaSMSMes as List<ERP_CRM_Solution.ViewModels.ModeloViewModel>).Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Data de Emissão</th>
                                                                <th>Total Enviado</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (ViewBag.ListaSMSMes as List<ERP_CRM_Solution.ViewModels.ModeloViewModel>))
                                                            {
                                                                <tr>
                                                                    <td>@cond.DataEmissao.ToShortDateString()</td>
                                                                    <td>@cond.Valor</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                                <div class="form-group">
                                                    @Html.ButtonLinkIndex(text: "Ver Todos os Meses", action: "VerSMSExpansaoTodos", controller: "Mensagem")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Gráfico do Envio de SMS/Dia (Mês Corrente)</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                <canvas id="barChartSMS" height="150"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

