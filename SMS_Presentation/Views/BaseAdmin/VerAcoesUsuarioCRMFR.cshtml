<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Processos - Assinaturas</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCRMFR", "BaseAdmin")">Processos - Assinaturas</a>
            </li>
            <li class="active">
                <strong>Processos - Assinaturas - Ações</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12"  id="Lista">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Processos - Assinaturas - Ações do Usuário</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaCRMFR", controller: "BaseAdmin")
                        @Html.ButtonLinkIndex(text: "Dashboard Assinaturas", action: "MontarTelaDashboardCRMFR", controller: "BaseAdmin", buttonClass: "primary")                
                    </div>

                    <div class="row">
                        @if ((ViewBag.Lista as List<EntitiesServices.Model.FORMULARIO_RESPOSTA_ACAO>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example1">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th>Data Criação</th>
                                        <th>Título</th>
                                        <th>Data Prevista</th>
                                        <th>Dias para Encerrar</th>
                                        <th>Status</th>
                                        <th>Atribuição</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Lista as List<EntitiesServices.Model.FORMULARIO_RESPOSTA_ACAO>))
                                    {
                                        if (cond.FRAC_IN_STATUS == 1)
                                        {
                                            <tr style="background-color:lightyellow; color: green">
                                                <td>@cond.FRAC_DT_CRIACAO.ToShortDateString()</td>
                                                <td>@cond.FRAC_NM_TITULO</td>
                                                @if (cond.FRAC_DT_PREVISTA.Value.Date > DateTime.Today.Date)
                                                {
                                                    <td style="color: green;">@cond.FRAC_DT_PREVISTA.Value.ToShortDateString() @cond.FRAC_DT_PREVISTA.Value.ToShortTimeString()</td>
                                                }
                                                else if (cond.FRAC_DT_PREVISTA.Value.Date == DateTime.Today.Date)
                                                {
                                                    <td style="color: orange;">@cond.FRAC_DT_PREVISTA.Value.ToShortDateString() @cond.FRAC_DT_PREVISTA.Value.ToShortTimeString()</td>
                                                }
                                                else
                                                {
                                                    <td style="color: red; font-weight:bold">@cond.FRAC_DT_PREVISTA.Value.ToShortDateString() @cond.FRAC_DT_PREVISTA.Value.ToShortTimeString()</td>
                                                }
                                                @if ((cond.FRAC_DT_PREVISTA.Value.Date - DateTime.Today.Date).Days > 0)
                                                {
                                                    <td style="color: green;">@((cond.FRAC_DT_PREVISTA.Value.Date - DateTime.Today.Date).Days)</td>
                                                }
                                                else
                                                {
                                                    <td style="color: red; font-weight:bold">@((cond.FRAC_DT_PREVISTA.Value.Date - DateTime.Today.Date).Days)</td>
                                                }
                                                @if (cond.FRAC_IN_STATUS == 1)
	                                            {
                                                    <td><span class="badge badge-primary">Ativa</span></td>
                                                }
                                                else if (cond.FRAC_IN_STATUS == 2)
                                                {
                                                    <td><span class="badge badge-danger">Pendente</span></td>
                                                }
                                                else if (cond.FRAC_IN_STATUS == 3)
                                                {
                                                    <td><span class="badge badge-success">Encerrada</span></td>
                                                }
                                                else if (cond.FRAC_IN_STATUS == 4)
                                                {
                                                    <td><span class="badge badge-warning">Excluída</span></td>
                                                }
                                                <td>@cond.USUARIO.USUA_NM_NOME</td>
                                                <td class="td-one-action">
                                                    @if (cond.FRAC_IN_STATUS == 1 || cond.FRAC_IN_STATUS == 2)
                                                    {
                                                        @Html.TableLinkDetails(cond.FRAC_CD_ID, "EditarAcaoFR", "fa-edit", "Editar/Consultar")
                                                    }
                                                    else if (cond.FRAC_IN_STATUS == 3)
                                                    {   
                                                        @Html.TableLinkDetails(cond.FRAC_CD_ID, "VerAcaoFR", "fa-search", "Consultar")
                                                    }
                                                    else if (cond.FRAC_IN_STATUS == 4)
                                                    {   
                                                        @Html.TableLinkDetails(cond.FRAC_CD_ID, "VerAcaoFR", "fa-search", "Consultar")
                                                    }
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td>@cond.FRAC_DT_CRIACAO.ToShortDateString()</td>
                                                <td>@cond.FRAC_NM_TITULO</td>
                                                @if (cond.FRAC_DT_PREVISTA.Value.Date > DateTime.Today.Date)
                                                {
                                                    <td>@cond.FRAC_DT_PREVISTA.Value.ToShortDateString() @cond.FRAC_DT_PREVISTA.Value.ToShortTimeString()</td>
                                                }
                                                else if (cond.FRAC_DT_PREVISTA.Value.Date == DateTime.Today.Date)
                                                {
                                                    <td>@cond.FRAC_DT_PREVISTA.Value.ToShortDateString() @cond.FRAC_DT_PREVISTA.Value.ToShortTimeString()</td>
                                                }
                                                else
                                                {
                                                    <td>@cond.FRAC_DT_PREVISTA.Value.ToShortDateString() @cond.FRAC_DT_PREVISTA.Value.ToShortTimeString()</td>
                                                }
                                                @if ((cond.FRAC_DT_PREVISTA.Value - DateTime.Today.Date).Days > 0)
                                                {
                                                    <td>@((cond.FRAC_DT_PREVISTA.Value.Date - DateTime.Today.Date).Days)</td>
                                                }
                                                else
                                                {
                                                    <td>@((cond.FRAC_DT_PREVISTA.Value.Date - DateTime.Today.Date).Days)</td>
                                                }
                                                @if (cond.FRAC_IN_STATUS == 1)
	                                            {
                                                    <td><span class="badge badge-primary">Ativa</span></td>
                                                }
                                                else if (cond.FRAC_IN_STATUS == 2)
                                                {
                                                    <td><span class="badge badge-danger">Pendente</span></td>
                                                }
                                                else if (cond.FRAC_IN_STATUS == 3)
                                                {
                                                    <td><span class="badge badge-success">Encerrada</span></td>
                                                }
                                                else if (cond.FRAC_IN_STATUS == 4)
                                                {
                                                    <td><span class="badge badge-warning">Excluída</span></td>
                                                }
                                                <td>@cond.USUARIO.USUA_NM_NOME</td>
                                                <td class="td-one-action">
                                                    @if (cond.FRAC_IN_STATUS == 1 || cond.FRAC_IN_STATUS == 2)
                                                    {
                                                        @Html.TableLinkDetails(cond.FRAC_CD_ID, "EditarAcaoFR", "fa-edit", "Editar/Consultar")
                                                    }
                                                    else if (cond.FRAC_IN_STATUS == 3)
                                                    {   
                                                        @Html.TableLinkDetails(cond.FRAC_CD_ID, "VerAcaoFR", "fa-search", "Consultar")
                                                    }
                                                    else if (cond.FRAC_IN_STATUS == 4)
                                                    {   
                                                        @Html.TableLinkDetails(cond.FRAC_CD_ID, "VerAcaoFR", "fa-search", "Consultar")
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
