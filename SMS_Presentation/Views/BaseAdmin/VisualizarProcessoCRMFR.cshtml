                                                                @Html.TextBoxFor(m => m.FORE_NM_PROCESSO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Data Criação
