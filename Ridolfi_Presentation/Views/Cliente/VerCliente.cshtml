@using Presentation.Extensions
@model ERP_CRM_Solution.ViewModels.ClienteViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Clientes</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCliente", "Cliente")">Clientes</a>
            </li>
            <li class="active">
                <strong>Cliente - Consulta</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Cliente - Consulta</h5>
                </div>

                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        @using (Html.BeginForm("VerCliente", "Cliente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {

                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-2">Anexos</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-4">Anotações</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-5">Contatos</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-3">Observações</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    @Html.HiddenFor(m => m.CLIE_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.CLIE_CD_ID)
                                                    Categoria
                                                    @Html.TextBoxFor(m => m.CATEGORIA_CLIENTE.CACL_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Precatório
                                                    @Html.TextBoxFor(m => m.PRECATORIO.PREC_NM_PRECATORIO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Tribunal
                                                    @Html.TextBoxFor(m => m.TRF.TRF1_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Vara*
                                                    @Html.TextBoxFor(m => m.VARA.VARA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Titularidade*
                                                    @Html.TextBoxFor(m => m.TITULARIDADE.TITU_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Nome
                                                    @Html.TextBoxFor(m => m.CLIE_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Valor (R$)
                                                    @Html.TextBoxFor(m => m.CLIE_VL_VALOR, "{0:n2}", new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Valor Pago (R$)
                                                    @Html.TextBoxFor(m => m.CLIE_VL_VALOR_PAGO, "{0:n2}", new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Vencimento
                                                    @Html.TextBoxFor(m => m.CLIE_NR_VENCIMENTO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Ofício
                                                    @Html.TextBoxFor(m => m.CLIE_NR_OFICIO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Processo
                                                    @Html.TextBoxFor(m => m.CLIE_NR_PROCESSO, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Nome do Réu
                                                    @Html.TextBoxFor(m => m.CLIE_NM_REU, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data Cadastro
                                                    @Html.TextBoxFor(m => m.CLIE_DT_CADASTRO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly", @style = "color:green; font-weight:bold" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Anexos*@
                                <div id="tab-2" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <hr />
                                            <div class="col-lg-12 col-md-12 col-xs-12"> 
                                                <h4>Anexos</h4>
                                                <br />
                                                <div class="form-group">
                                                    @using (Html.BeginForm("UploadFileCliente", "Cliente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container2" }))
                                                    {
                                                        <div class="ibox-content">
                                                            @if (Model.CLIENTE_ANEXO.Count > 0)
                                                            {
                                                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                    <thead style ="background-color:lightsteelblue">
                                                                        <tr>
                                                                            <th>Título</th>
                                                                            <th>Data</th>
                                                                            <th>Tipo</th>
                                                                            <th class="td-one-action">Ações</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var cond in (Model.CLIENTE_ANEXO))
                                                                        {
                                                                            <tr>
                                                                                <td>@cond.CLAN_NM_TITULO</td>
                                                                                <td>@cond.CLAN_DT_ANEXO.ToShortDateString()</td>
                                                                                @if (cond.CLAN_IN_TIPO == 1)
	                                                                            {
                                                                                    <td><span class="badge badge-success">Imagem/Vídeo</span></td>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <td><span class="badge badge-primary">Arquivo</span></td>
                                                                                }
                                                                                <td class="td-one-action">
                                                                                    @if (cond.CLAN_IN_TIPO == 1 || cond.CLAN_IN_TIPO == 2)
                                                                                    {
                                                                                        @Html.TableLinkDetails(cond.CLAN_CD_ID, "VerAnexoCliente", "fa-camera", "Visualizar")
                                                                                    }
                                                                                    @if (cond.CLAN_IN_TIPO == 3)
                                                                                    {
                                                                                        <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.CLAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                    }
                                                                                    @Html.TableLinkDetails(cond.CLAN_CD_ID, "DownloadCliente","fa-download", "Download")
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            }
                                                            <input type="file" name="file" id="file" class="btn btn-sm btn-warning"/>
                                                            <br />
                                                            <div class="form-group">
                                                                <input type="submit" value="Incluir Anexo" class="btn btn-sm btn-success" />
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        
                                @*Anotações*@
                                <div id="tab-4" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 800px" >
                                            <div class="ibox-title"  style="color: black">
                                                <h5>Anotações</h5>
                                            </div>
                                            <div class="ibox-content" style="color: black; overflow: auto">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        @if (Model.CLIENTE_ANOTACAO.Count > 0)
                                                        {
                                                            foreach (var item in (Model.CLIENTE_ANOTACAO))
                                                            {
                                                                <div class="social-feed-box">
                                                                    <div class="social-avatar">
                                                                        <a href="" class="pull-left">
                                                                            <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                                        </a>
                                                                        <div class="media-body">
                                                                            <a href="#">
                                                                                @item.USUARIO.USUA_NM_NOME
                                                                            </a>
                                                                            <small class="text-muted">@item.CLAN_DT_ANOTACAO.ToString("dd/MM/yyyy HH:mm")</small>
                                                                        </div>
                                                                    </div>
                                                                    <div class="social-body">
                                                                        <p>
                                                                            @item.CLAN_TX_ANOTACAO
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="row">
                                                                <div class="col-lg-4 col-md-4 col-xs-2">

                                                                </div>
                                                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                                                    <h2 style="font-weight: bold">Nenhuma anotação cadastrada nesse cliente</h2>
                                                                </div>
                                                                <div class="col-lg-4 col-md-4 col-xs-2">

                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                                <br />
                                                <div class="form-group">
                                                    @Html.ButtonLinkIndex(text: "Incluir Nova Anotação", action: "IncluirAnotacao", controller: "Cliente")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>                    

                                @*Contatos*@
                                <div id="tab-5" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <h4>Contatos</h4>
                                                    <br />
                                                    @if (Model.CLIENTE_CONTATO.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Nome</th>
                                                                    <th>Cargo</th>
                                                                    <th>E-Mail</th>
                                                                    <th>Telefone</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.CLIENTE_CONTATO))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.CLCO_NM_NOME</td>
                                                                        <td>@cond.CLCO_NM_CARGO</td>
                                                                        <td><a href="@Url.Action("EnviarEMailContato", "Cliente", new { id = cond.CLCO_CD_ID })" />@cond.CLCO_NM_EMAIL</td>
                                                                        <td>@cond.CLCO_NM_TELEFONE</td>
                                                                        <td class="td-one-action">
                                                                            @Html.TableLinkDetails(cond.CLCO_CD_ID, "EditarContato", "fa-edit", "Editar/Consultar Contato")
                                                                            @if (cond.CLCO_IN_ATIVO == 1)
                                                                            {
                                                                                <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/Cliente/ExcluirContato/@cond.CLCO_CD_ID')" title="Excluir"></span>
                                                                            }
                                                                            else
                                                                            {   
                                                                                <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-refresh" onclick="ShowModalReativar('/Cliente/ReativarContato/@cond.CLCO_CD_ID')" title="Reativar"></span>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonLinkIndex(text: "Incluir Novo Contato", action: "IncluirContato", controller: "Cliente")
                                        </div>
                                    </div>
                                </div>

                                @*Observações*@
                                <div id="tab-3" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Observações
                                                    @Html.TextAreaFor(m => m.CLIE_TX_OBSERVACOES, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.CLIE_TX_OBSERVACOES, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <br />
                                    @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                    <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão de Cliente</button>
                                    @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBaseCliente", controller: "Cliente")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script src="~/Scripts/uploadAnexo.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
            $("#cep").mask("99999-999");
            $('#tel').mask("(99) 9999-9999");
            $('#cel').mask("(99) 99999-9999");
            $('#wh').mask("(99) 99999-9999");
        });
    </script>

    <script>
        SendFilesV2('imgTran', 'Cliente', 'UploadFileToSession');
    </script>

    <script type="text/javascript">
        $(function () {
            $('#PF').hide();
            $('#PJ').hide();
        });

        $(document).ready(function () {
            //Chama o evento após selecionar um valor
            $('#pessoa').on('change', function () {
                //Verifica se o valor é igual a 1 e mostra a divCnpj
                if (this.value == '2') {
                    $("#PF").hide();
                    $("#PJ").show();
                    $("#razao").show();
                }
                //Se o tempo for mé igual a 2 mostra a divCpf
                else if (this.value == '1') {
                    $("#PJ").hide();
                    $("#PF").show();
                    $("#razao").hide();
                }
                else if (this.value == '4') {
                    $("#PF").show();
                    $("#PJ").hide();
                    $("#razao").hide();
                }

                //Se não for nem 1 nem 2 esconde as duas
                else {
                    $("#PJ").hide();
                    $("#PF").hide();
                    $("#razao").hide();
                }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            var i = -1;
            var toastCount = 0;
            var $toastlast;
            var getMessage = function () {
                var msg = 'Hi, welcome to Inspinia. This is example of Toastr notification box.';
                return msg;
            };

            $('#basictoast').click(function () {
                // Display a success toast, with a title
                toastr.success('Inclusão em andamento!')
            });
            $('#showtoast').click(function () {
                var shortCutFunction = $("#toastTypeGroup input:radio:checked").val();
                var msg = $('#message').val();
                var title = $('#title').val() || '';
                var $showDuration = $('#showDuration');
                var $hideDuration = $('#hideDuration');
                var $timeOut = $('#timeOut');
                var $extendedTimeOut = $('#extendedTimeOut');
                var $showEasing = $('#showEasing');
                var $hideEasing = $('#hideEasing');
                var $showMethod = $('#showMethod');
                var $hideMethod = $('#hideMethod');
                var toastIndex = toastCount++;
                toastr.options = {
                    closeButton: $('#closeButton').prop('checked'),
                    debug: $('#debugInfo').prop('checked'),
                    progressBar: $('#progressBar').prop('checked'),
                    positionClass: $('#positionGroup input:radio:checked').val() || 'toast-top-right',
                    onclick: null
                };
                if ($('#addBehaviorOnToastClick').prop('checked')) {
                    toastr.options.onclick = function () {
                        alert('You can perform some custom action after a toast goes away');
                    };
                }
                if ($showDuration.val().length) {
                    toastr.options.showDuration = $showDuration.val();
                }
                if ($hideDuration.val().length) {
                    toastr.options.hideDuration = $hideDuration.val();
                }
                if ($timeOut.val().length) {
                    toastr.options.timeOut = $timeOut.val();
                }
                if ($extendedTimeOut.val().length) {
                    toastr.options.extendedTimeOut = $extendedTimeOut.val();
                }
                if ($showEasing.val().length) {
                    toastr.options.showEasing = $showEasing.val();
                }
                if ($hideEasing.val().length) {
                    toastr.options.hideEasing = $hideEasing.val();
                }
                if ($showMethod.val().length) {
                    toastr.options.showMethod = $showMethod.val();
                }
                if ($hideMethod.val().length) {
                    toastr.options.hideMethod = $hideMethod.val();
                }
                if (!msg) {
                    msg = getMessage();
                }
                $("#toastrOptions").text("Command: toastr["
                    + shortCutFunction
                    + "](\""
                    + msg
                    + (title ? "\", \"" + title : '')
                    + "\")\n\ntoastr.options = "
                    + JSON.stringify(toastr.options, null, 2)
                );
                var $toast = toastr[shortCutFunction](msg, title); // Wire up an event handler to a button in the toast, if it exists
                $toastlast = $toast;
                if ($toast.find('#okBtn').length) {
                    $toast.delegate('#okBtn', 'click', function () {
                        alert('you clicked me. i was toast #' + toastIndex + '. goodbye!');
                        $toast.remove();
                    });
                }
                if ($toast.find('#surpriseBtn').length) {
                    $toast.delegate('#surpriseBtn', 'click', function () {
                        alert('Surprise! you clicked me. i was toast #' + toastIndex + '. You could perform an action here.');
                    });
                }
            });
            function getLastToast() {
                return $toastlast;
            }
            $('#clearlasttoast').click(function () {
                toastr.clear(getLastToast());
            });
            $('#cleartoasts').click(function () {
                toastr.clear();
            });

        });
    </script>

    <script>
        function PesquisaCep(cep, btn, tipoEnd) {
            data = {
                cep: cep
                , tipoEnd: tipoEnd
            }

            $('#btnBuscaCep').attr("disabled", "disabled");

            $.ajax({
                url: '../Telefone/PesquisaCEP_Javascript'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    $('#endereco').val(r.TELE_NM_ENDERECO);
                    $('#bairro').val(r.TELE_NM_BAIRRO);
                    $('#cidade').val(r.TELE_NM_CIDADE);

                    $('#uf option[value="' + r.UF_CD_ID + '"]').attr("selected", "selected");
                    $('#btnBuscaCep').removeAttr("disabled");
                }
            });
        }
    </script>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                  alert("@ViewBag.Message");
            };
        </script>
    }
}


